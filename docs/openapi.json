{
  "openapi": "3.0.0",
  "info": {
    "title": "Time Capsule",
    "version": "1.0.0"
  },
  "paths": {
    "/v1/login": {
      "post": {
        "summary": "Login",
        "description": "Retrieve access token by sending existing credentials",
        "operationId": "login",
        "requestBody": {
          "description": "Login request payload",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "title": "LoginRequest",
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "fikrirnurhidayat@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 6,
                    "maxLength": 255,
                    "example": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Succesful Login",
            "content": {
              "application/json": {
                "schema": {
                  "title": "LoginResponse",
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "accessToken": {
                          "type": "string"
                        },
                        "refreshToken": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v1/register": {
      "post": {
        "summary": "Register",
        "description": "Be time capsule enjoyer.",
        "operationId": "register",
        "requestBody": {
          "description": "Register request payload",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "title": "RegisterRequest",
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "fikrirnurhidayat@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 6,
                    "maxLength": 255,
                    "example": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Succesful Registeration",
            "content": {
              "application/json": {
                "schema": {
                  "title": "RegisterResponse",
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "accessToken": {
                          "type": "string"
                        },
                        "refreshToken": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {},
  "tags": []
}
